<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.acxdev.prototypegaming">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PrototypeGaming">
        <activity
            android:name=".ui.activity.ActivityDetail"
            android:configChanges="keyboardHidden|orientation|screenSize|density|uiMode"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.ActivityChat"
            android:exported="false" />
        <activity
            android:name=".ui.activity.ActivityOnBoarding"
            android:configChanges="keyboardHidden|orientation|screenSize|density|uiMode"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.ActivityMain"
            android:configChanges="keyboardHidden|orientation|screenSize|density|uiMode"
            android:screenOrientation="portrait" />
    </application>

</manifest>