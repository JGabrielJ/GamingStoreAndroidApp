<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_parent"
    tools:context=".ui.fragment.FragmentOnBoarding1">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_30dp"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_header"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="117dp"
        android:layout_centerInParent="true"
        android:src="@drawable/image3" />

    <TextView
        android:layout_below="@id/image"
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_30dp"
        android:gravity="center_horizontal"
        android:text="...ou simplesmente escolha jogar sozinho e buscar obter cada vez mais conquistas"
        android:textColor="@color/textSecondary" />

</RelativeLayout>