<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardBackground"
    app:cardCornerRadius="@dimen/card_corner_small"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:textSize="@dimen/text_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4dp"
            android:layout_toEndOf="@id/title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/processor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="@dimen/padding_parent_small"
            android:drawablePadding="@dimen/padding_parent_small"
            android:textColor="@color/textSecondary"
            app:drawableStartCompat="@drawable/bg_circle_small"
            app:drawableTint="@color/green" />

        <TextView
            android:id="@+id/ram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/processor"
            android:layout_marginTop="@dimen/margin_4dp"
            android:drawablePadding="@dimen/padding_parent_small"
            android:textColor="@color/textSecondary"
            app:drawableStartCompat="@drawable/bg_circle_small"
            app:drawableTint="@color/green" />

        <TextView
            android:id="@+id/gpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ram"
            android:layout_marginTop="@dimen/margin_4dp"
            android:drawablePadding="@dimen/padding_parent_small"
            android:textColor="@color/textSecondary"
            app:drawableStartCompat="@drawable/bg_circle_small"
            app:drawableTint="@color/green" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>